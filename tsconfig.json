{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }